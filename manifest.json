{
  "manifest_version": 3,
  "name": "YT_Focus",
  "version": "1.0",
  "description": "Focus Mode for Youtube.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage", "webNavigation"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
